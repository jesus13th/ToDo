<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Agregar"
             x:Class="ToDo.App.Views.AddPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Guardar" x:Name="guardarBtn" Clicked="guardarBtn_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Nombre" FontSize="Medium" TextColor="{StaticResource colorPrimary}" />
            <Entry x:Name="nombreEntry"/>
            <Label Text="Descripcion" FontSize="Medium" TextColor="{StaticResource colorPrimary}" />
            <Entry HeightRequest="200" x:Name="descripcionEntry" VerticalTextAlignment="Start" />
            <Label Text="Fecha" FontSize="Medium" TextColor="{StaticResource colorPrimary}"/>
            <DatePicker x:Name="registerDate"/>
            <Label Text="Fecha" FontSize="Medium" TextColor="{StaticResource colorPrimary}"/>
            <TimePicker x:Name="registerTime"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>